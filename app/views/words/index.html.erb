<p id="notice"><%= notice %></p>

<h1>Words</h1>

<%= link_to "Szukaj", search_words_path %>

<table class="words-table">
  <thead>
    <tr class="table-heading">
      <th>Word</th>
      <th>Letter count</th>
      <th>Pronunciation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.word.capitalize %></td>
        <td><%= word.word.length %></td>
        <td><%= word.pronunciation %></td>
        <td><%= link_to 'Show', word %></td>
        <td><%= link_to 'Edit', edit_word_path(word) %></td>
        <td><%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Word', new_word_path %>
